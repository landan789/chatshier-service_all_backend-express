{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "lib": [
            "es6", "es2017.object"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "checkJs": true,
        "noEmit": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules"
    ],
    "include": [
        "typings/server/**/*.d.ts",
        "controllers/**/*",
        "helpers/**/*",
        "middlewares/**/*",
        "models/**/*",
        "routes/**/*",
        "schedules/**/*",
        "sockets/**/*"
    ]
}