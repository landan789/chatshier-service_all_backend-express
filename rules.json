// These rules grant access to a node matching the authenticated
// user's ID from the Firebase auth token
{
    "rules": {
        "apps": {
            ".read": true,
            ".write": true,
            "$app_id": {
                ".indexOn": "isDeleted"
            }
        },
        "users": {
            ".read": true,
            ".write": true,
            "$user_id": {
                ".read": "$user_id === auth.uid",
                ".write": "$user_id === auth.uid"
            }
        },
        "groups": {
            "$group_id": {
                ".indexOn": "isDeleted",
                "members": {
                    "$member_id": {
                        ".indexOn": "isDeleted"
                    }
                }
            }
        },
        "calendars": {
            ".read": true,
            ".write": true
        },
        "webhooks": {
            ".read": true,
            ".write": true
        },
        "contacts": {
            ".read": false,
            ".write": true
        }
    }
}