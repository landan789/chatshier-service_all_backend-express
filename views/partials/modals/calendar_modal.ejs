<div class="modal fade calendar-modal" id="calendar_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">新增事件</h4>
            </div>

            <div class="modal-body">
                <!-- 內容 -->
                <div class="input-wrapper">
                    <div class="form-group">
                        <input class="form-control event-title" type="text" placeholder="標題" required />
                    </div>

                    <div class="form-group">
                        <label for="start_datetime">開始時間</label>
                        <div class="input-group date" id="start_datetime_picker">
                            <input type="text" class="form-control" name="start_datetime" required />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="end_datetime">結束時間</label>
                        <div class="input-group date" id="end_datetime_picker">
                            <input type="text" class="form-control" name="end_datetime" required />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-check checkbox-is-draft">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" id="event_is_allday">
                            是否為全天？
                        </label>
                    </div>

                    <textarea class="form-control event-content" type="text" placeholder="描述" rows="6"></textarea>

                    <div id="cal-error-msg" hidden>請輸入事件名稱、開始時間、結束時間</div>
                    <div id="tim-error-msg" hidden>開始時間不能晚於結束時間</div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="add-cal-btn">新增</button>
                <button type="button" class="btn btn-primary" id="save-cal-btn">確認</button>
                <button type="button" class="btn btn-primary" id="del-cal-btn">刪除</button>
                <button type="button" class="btn btn-secondary" id="cls-cal-btn" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>