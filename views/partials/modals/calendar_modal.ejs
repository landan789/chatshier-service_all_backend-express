<div class="modal fade calendar-modal" id="calendar_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">新增事件</h4>
            </div>

            <div class="modal-body">
                <!-- 內容 -->
                <div class="input-wrapper">
                    <div class="form-group">
                        <input class="form-control event-title" type="text" placeholder="標題" required />
                    </div>

                    <div class="form-group">
                        <label for="startDatetime">開始時間</label>
                        <div class="input-group date" id="startDatetimePicker">
                            <input type="text" class="form-control" name="startDatetime" required />
                            <span class="input-group-addon input-group-prepend">
                                <span class="input-group-text">
                                    <i class="far fa-calendar-alt"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="endDatetime">結束時間</label>
                        <div class="input-group date" id="endDatetimePicker">
                            <input type="text" class="form-control" name="endDatetime" required />
                            <span class="input-group-addon input-group-prepend">
                                <span class="input-group-text">
                                    <i class="far fa-calendar-alt"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-check checkbox-is-draft">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" id="event_is_allday">
                            是否為全天？
                        </label>
                    </div>

                    <textarea class="form-control event-content" type="text" placeholder="描述" rows="6"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="addCalendarBtn">新增</button>
                <button type="button" class="btn btn-primary" id="saveCalendarBtn">確認</button>
                <button type="button" class="btn btn-primary" id="delCalendarBtn">刪除</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>