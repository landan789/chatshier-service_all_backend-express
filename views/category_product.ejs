<!DOCTYPE html>
<html>

<head>
    <% include ../views/partials/meta_tags.ejs %>
    <% include ../views/partials/favicon.ejs %>
    <title><%= title %></title>

    <% include ../views/partials/require_css.ejs %>
    <link rel="stylesheet" href="css/table.css" />
</head>

<body>
    <% include ../views/partials/loading.ejs %>

    <div class="root d-flex w-100 h-100">
        <% include ../views/partials/control_panel.ejs %>

        <div class="ml-auto w-100 page-wrapper">
            <% include ../views/partials/toolbar.ejs %>

            <div class="container my-5">
                <div class="chsr card">
                    <div class="title">
                        <h3 class="mb-4 pt-3 px-3">管理商品</h3>
                        <p class="mb-3 pt-0 px-3">首頁 / 商品服務 / 管理商品</p>
                        <p class="mb-3 pt-0 px-3">管理產品類別及項目</p>
                    </div>

                    <div class="px-3 my-3 dropdown app-dropdown" id="appsDropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <span class="dropdown-text">請選擇聊天機器人</span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="appsDropdown"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="chsr modal fade product-modal" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-xs" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fas fa-times" aria-hidden="true"></i>
                    </button>
                </div>

                <div class="modal-body">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary">重新設定</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">完成設定</button>
                </div>
            </div>
        </div>
    </div>

    <% include ../views/partials/require_js.ejs %>
    <script src="/js/category_product.js"></script>
</body>

</html>