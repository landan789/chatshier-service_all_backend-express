<!DOCTYPE html>
<html>

<head>
    <% include ../views/partials/meta_tags.ejs %>
    <% include ../views/partials/favicon.ejs %>
    <title><%= title %></title>

    <% include ../views/partials/require_css.ejs %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="lib/css/bootstrap-datetimepicker-fixbs4.css">
    <link rel="stylesheet" href="css/analyze.css" />
</head>

<body>
    <% include ../views/partials/loading.ejs %>

    <div class="root d-flex w-100 h-100">
        <% include ../views/partials/control_panel.ejs %>

        <div class="ml-auto w-100 page-wrapper analyze-wrapper">
            <% include ../views/partials/toolbar.ejs %>

            <h3 class="page-title">分析頁面</h3>
            <div class="card analyze-body">
                <div class="card-body">
                    <div class="d-flex flex-wrap">
                        <div class="col-12 col-lg-6 mb-3 dropdown app-dropdown app-view" id="appDropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" disabled>
                                <span class="dropdown-text">請選擇分析來源</span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="appsDropdown"></div>
                        </div>

                        <div class="col-12 col-lg-6 mb-3 dropdown chart-dropdown" id="chartDropdown">
                            <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <span class="dropdown-text">每時段總訊息數</span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="chartDropdown">
                                <span class="dropdown-item view-time">每時段總訊息數</span>
                                <span class="dropdown-item view-month">單位：月</span>
                                <span class="dropdown-item view-date">單位：日</span>
                                <span class="dropdown-item view-hour">單位：小時</span>
                                <span class="dropdown-item view-cloud">文字頻率分析</span>
                            </div>
                        </div>

                        <div class="mt-3 mb-4 px-0 flex-wrap date-wrapper">
                            <div class="col-12 col-lg-6 mb-2 date-group">
                                <div class="input-group date" id="startDatetimePicker">
                                    <span class="input-group-addon input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </span>
                                    <input type="text" class="form-control" name="startDatetime" />
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 mb-2 date-group">
                                <div class="input-group date" id="endDatetimePicker">
                                    <span class="input-group-addon input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </span>
                                    <input type="text" class="form-control" name="endDatetime" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="chart-container">
                        <div class="mx-auto chart-body" id="chartBody"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% include ../views/partials/require_js.ejs %>
    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/serial.js"></script>
    <script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment-with-locales.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script src="lib/js/wordfreq.worker.js"></script>
    <script src="lib/js/wordcloud2.js"></script>
    <script src="js/analyze.js"></script>
</body>

</html>