          <li>
            <a class="nav-link" href="/chat">| <i class="fa fa-commenting fa-fw"></i> 聊天室</a>
          </li>
          <li>
            <a class="nav-link" href="/calendar">| <i class="fa fa-calendar fa-fw"></i> 行事曆</a>
          </li>
          <li>
            <a class="nav-link" href="/ticket">| <i class="fa fa-list-ul fa-fw"></i> 待辦事項</a>
          </li>
          <li>
            <a class="nav-link" href="/analyze">| <i class="fa fa-bar-chart fa-fw"></i> 訊息分析</a>
          </li>
          <li id="nav-message">
            <a class="nav-link" href="#">| <i class="fa fa-commenting fa-fw"></i> 訊息</a>
          </li>
          <!-- <li class="sub-tag" style="display:none; font-size: 12px; line-height: auto;">
            <a class="nav-link" href="/message_overview"> 總覽</a>
          </li> -->
          <li class="sub-tag"  style="display:none; font-size: 12px; line-height: auto;">
            <a class="nav-link" href="/message_autoreply"> 自動回覆</a>
          </li>
          <li class="sub-tag"  style="display:none; font-size: 12px; line-height: auto;">
            <a class="nav-link" href="/message_keywordsreply"> 關鍵字回覆</a>
