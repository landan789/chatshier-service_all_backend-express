<!DOCTYPE html>
<html>

<head>
    <% include ./partials/meta_tags.ejs %>
    <% include ./partials/favicon.ejs %>
    <title><%= title %></title>

    <% include ./partials/require_css.ejs %>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="lib/css/bootstrap-datetimepicker-fixbs4.css">
    <link rel='stylesheet' href='css/ticket.css' />
    <link rel="stylesheet" href="css/partials/ticket_edit_modal.css" />
</head>

<body>
    <% include ./partials/loading.ejs %>

    <!--alert bar-->
    <div id="alert-success" class="chsr alert alert-success alert-dismissible" role="alert">
        <span></span>
        <button type="button" class="close">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <div id="alert-warning" class="chsr alert alert-warning alert-dismissible" role="alert">
        <p></p>
        <button type="button" id="no" class="btn btn-light btn-border">否</button>
        <button type="button" id="yes" class="btn btn-danger">是</button>
    </div>
    <div id="alert-danger" class="chsr alert alert-danger alert-dismissible" role="alert">
        <span></span>
        <button type="button" class="close">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <!--alert bar end-->

    <div class="root chsr d-flex w-100 h-100">
        <% include ./partials/control_panel.ejs %>

        <div class="ml-auto w-100 page-wrapper">
            <% include ./partials/toolbar.ejs %>

            <div class="container my-5">
                <div class="pb-5 chsr card">
                    <div class="d-flex mt-4 px-4 align-items-center top-toolbar">
                        <i class="mx-1 fa fa-search fa-fw"></i>
                        <input type="text" class="mx-1 ticket-search-bar" id="ticket_search_bar" placeholder="搜尋">
                        <button class="px-0 btn btn-light btn-border ticket-add insert" data-toggle="modal" data-target="#ticketAddModal">
                            <i class="fas fa-plus fa-fw"></i>
                        </button>
                    </div>
                
                    <div class="px-4 chsr ticket">
                        <table>
                            <thead>
                                <tr>
                                    <th>客戶姓名</th>
                                    <th class="d-none d-sm-table-cell">描述</th>
                                    <th>狀態</th>
                                    <th>優先</th>
                                    <th class="d-none d-lg-table-cell">到期時間</th>
                                    <th class="d-none d-lg-table-cell">指派人</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="ticket-body"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% include ./partials/modals/ticket_add_modal.ejs %>
    <% include ./partials/modals/ticket_edit_modal.ejs %>

    <% include ./partials/require_js.ejs %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment-with-locales.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script src="js/ticket.js"></script>
</body>

</html>