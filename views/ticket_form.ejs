<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <title>
        <%= title %>
    </title>
    <link rel="icon" href="image/favicon.ico" />
    <link rel="stylesheet" href="lib/css/bootstrap.min.css" />
    <link rel="stylesheet" href="lib/css/font-awesome.min.css" />
    <link rel="stylesheet" href="css/sb-admin-2.css">
    <link rel="stylesheet" href="css/_main.css">
    <link rel="stylesheet" href="css/ticket.css">
</head>

<body>
    <% include ../views/partials/wrapper.ejs %>
        <!-- Form -->
        <div id="form-wrap">
            <!-- 任務內容 -->
            <form>
                <div class="form-group row">
                    <label for="app">App</label>
                    <select class="form-control" id="add-form-app">
                        <option value="">載入中</option>
                    </select>
                </div>
                <!-- 客戶姓名 -->
                <div class="form-group row">
                    <label for="name" class="col-2 col-form-label">客戶姓名</label>
                    <select class="form-control" id="add-form-name">
                        <option value="">無資料</option>
                    </select>
                </div>
                <!-- 客戶Id -->
                <div class="form-group row">
                    <label for="subject" class="col-2 col-form-label">客戶ID</label>
                    <div class="col-4">
                        <input class="form-control" type="text" value="" id="add-form-uid" readonly>
                    </div>
                </div>

                <!-- email -->
                <div class="form-group row">
                    <label for="email" class="col-2 col-form-label">電子郵件</label>
                    <div class="col-4">
                        <input class="form-control" type="text" value="" id="add-form-email" readonly>
                    </div>
                </div>

                <!-- phone -->
                <div class="form-group row">
                    <label for="phone" class="col-2 col-form-label">手機</label>
                    <div class="col-4">
                        <input class="form-control" type="text" value="" id="add-form-phone" readonly>
                    </div>
                </div>

                <!-- 狀態 -->
                <div class="form-group row">
                    <label for="status">狀態</label>
                    <select class="form-control" id="add-form-status">
                      <option value="2">未處理</option>
                      <option value="3">處理中</option>
                      <option value="4">已解決</option>
                      <option value="5">已關閉</option>
                    </select>
                </div>
                <!-- 緊急 -->
                <div class="form-group row">
                    <label for="priority">優先</label>
                    <select class="form-control" id="add-form-priority">
                        <option value="1">低</option>
                        <option value="2">中</option>
                        <option value="3">高</option>
                        <option value="4">急</option>
                    </select>
                </div>
                <!-- <div class="form-group row">
                    <label>負責人</label>
                    <select class="form-control" id="add-form-agents">
                        <option value="未指定">請選擇</option>
                    </select>
                </div> -->
                <!-- 說明 -->
                <div class="form-group row">
                    <label for="description">說明</label>
                    <textarea class="form-control" id="add-form-description" rows="3"></textarea>
                </div>
                <br />
                <div id="error" class="error"></div>
                <br />
                <button type="button" class="btn btn-default" id="add-form-goback">返回</button>
                <button type="button" class="btn btn-info" id="add-form-submit">確認</button>
                <br />
                <br />
            </form>
        </div>
        <script src="http://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="https://www.gstatic.com/firebasejs/4.1.2/firebase.js"></script>
        <script src="lib/js/bootstrap.min.js"></script>
        <script src="config/firebaseConfig.js"></script>
        <script src="config/url-config.js"></script>
        <script src="js/navigation.js"></script>
        <script src="js/_firebase-auth.js"></script>
        <script src="js/partials/restful_api.js"></script>
        <script src="js/ticket_form.js"></script>
        <script src="js/sb-admin-2.js"></script>
</body>

</html>